{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "./src",
    "lib": ["es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
